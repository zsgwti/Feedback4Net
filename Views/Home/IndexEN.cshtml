                contact: [
                    /^(((\\+\\d{2}-)?0\\d{2,3}-\\d{7,8})|((\\+\\d{2}-)?(\\d{2,3}-)?([1][3,4,5,7,8][0-9]\\d{8})))$/,
                    'Please enter the correct contact information！'
                ]
            });


            // 提交事件
            form.on('submit(infomation)', function (data) {
                console.log("submit")
                var field = data.field;
                $.ajax({
                    url: '/Home/submit',
                    type: 'post',
                    dataType: 'json',
                    data: field,
                    success: function (result) {
                        if (result.result == "success") {
                            
                            layer.msg('Thank you for your submission！', { icon: 1 }, function () {
                                setTimeout(function () {
                                    /*window.location.href = "http://www.dr-coffee.com/";*/
                                    //window.location.reload();
                                    window.location.href = "/Home/End";
                                }, 1000)
                            });
                        } else if (result.result == "none") {
                            layer.msg('Please check the information you have entered！', { icon: 0 });
                        } else {
                            layer.msg('There is an error, please contact the relevant personnel！');
                        }

                    }
                })
                return false;
            });

